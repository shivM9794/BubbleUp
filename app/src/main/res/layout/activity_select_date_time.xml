<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardSection.SelectDateTimeActivity">

    <LinearLayout
        android:id="@+id/layoutToolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="#FFD700"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_weight="10"
            android:src="@drawable/ic_arrow_back"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/txt_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="75"
            android:fontFamily="@font/alike"
            android:gravity="center"
            android:text="Pickup Date &amp; Time"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/proceedBtn"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutToolbar"
        app:layout_constraintVertical_bias="0.011">

        <TextView
            android:id="@+id/recommended_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:paddingHorizontal="8dp"
            android:text="Select Date for Pickup :"
            android:fontFamily="@font/alike"
            android:textColor="@color/color_primary_on_primary"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="30">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card1"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="10"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:theme="@style/Theme.MaterialComponents.Light"
                style="?android:attr/borderlessButtonStyle"
                app:strokeWidth="1dp"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="20"
                    android:gravity="center"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/text_month_day"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="28 Aug 2022\n Thursday"
                        android:fontFamily="@font/alike"
                        android:layout_marginTop="10dp"
                        android:paddingHorizontal="8dp"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:textStyle="bold"/>


                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card2"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="10"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:theme="@style/Theme.MaterialComponents.Light"
                style="?android:attr/borderlessButtonStyle"
                app:strokeWidth="1dp"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="20"
                    android:gravity="center"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/text_month_day1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="29 Aug 2022\n Friday"
                        android:fontFamily="@font/alike"
                        android:layout_marginTop="10dp"
                        android:paddingHorizontal="8dp"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:textStyle="bold"/>


                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card3"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="10"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:theme="@style/Theme.MaterialComponents.Light"
                style="?android:attr/borderlessButtonStyle"
                app:strokeWidth="1dp"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="20"
                    android:gravity="center"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/text_month_day2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="30 Aug 2022\n Saturday"
                        android:fontFamily="@font/alike"
                        android:layout_marginTop="10dp"
                        android:paddingHorizontal="8dp"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:textStyle="bold"/>


                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>

        <TextView
            android:id="@+id/txt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:maxLines="1"
            android:paddingHorizontal="8dp"
            android:text="Select Time for Pickup :"
            android:textColor="@color/color_primary_on_primary"
            android:fontFamily="@font/alike"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="30">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_time1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:theme="@style/Theme.MaterialComponents.Light"
                style="?android:attr/borderlessButtonStyle"
                app:cardCornerRadius="18dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/time_slot1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="9:00 AM To 12:00 PM"
                        android:gravity="center"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/alike"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_time2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:theme="@style/Theme.MaterialComponents.Light"
                style="?android:attr/borderlessButtonStyle"
                app:cardCornerRadius="18dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/time_slot2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1:00 AM To 3:00 PM"
                        android:gravity="center"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/alike"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_time3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:theme="@style/Theme.MaterialComponents.Light"
                style="?android:attr/borderlessButtonStyle"
                app:cardCornerRadius="18dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/time_slot3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="4:00 AM To 6:00 PM"
                        android:gravity="center"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/alike"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_time4"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:theme="@style/Theme.MaterialComponents.Light"
                style="?android:attr/borderlessButtonStyle"
                app:cardCornerRadius="18dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/time_slot4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="7:00 AM To 9:00 PM"
                        android:gravity="center"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/alike"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/proceedBtn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="608dp"
        android:layout_marginEnd="15dp"
        android:background="#FFD700"
        android:fontFamily="@font/alike"
        android:text="Proceed"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>